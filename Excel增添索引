#创建一个Workbook对象，相当于创建了一个Excel文件 book=xlwt.Workbook(encoding="utf-8",style_compression=0) # 创建一个sheet对象，一个sheet对象对应Excel文件中的一张表格。 sheet = book.add_sheet('12', cell_overwrite_ok=True) #在新的表格创建新的索引 str2="/" for i in range(1, 50): str1=worksheet.cell_value(i,2)
  str3=worksheet.cell_value(i,0)
  str4=worksheet.cell_value(i,1)
  str5=worksheet.cell_value(i,2)
  str6=worksheet.cell_value(i,3)
#  print(cell_value) sheet.write(i, 4, str1[:str1.index(str2)])
  sheet.write(i, 0, str3)
  sheet.write(i, 1, str4)
  sheet.write(i, 2, str5)
  sheet.write(i, 3, str6) #  print str1[:str1.index(str2)] book.save('12.xls')
